doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
    link(rel="stylesheet" href='/icofont/icofont.min.css')
  body
    div.bg-image
    header
      img.logo(src='/buzzer-logo.svg')

    div.row
      div.column
        h2=`Punkte`
        ol.js-points
          each user, id in users
            if users[id]["sid"] != ""
              h3.points=`${users[id]["name"]} - ${users[id]["points"]}`
        button.js-clearpoints='Punkte zurücksetzen'

        h2=`Fragen`
        - var quest_list = ""
        each question in questions
          - quest_list=quest_list+`${question}`+"\n"
        - quest_list=quest_list.trim()
        textarea.questions=quest_list
        button.js-save-questions='Fragen speichern'
        h3.curr-question="Frage x von x"
        button.js-next-question='Nächste Frage'
        button.js-prev-question='Vorherige Frage'

      div.column
        h2=`Buzzes`
        ol.js-buzzes
          each buzz, id in buzzes
            div.row
              div.column
                button(class="right button-" + id + "-right")=`${buzz["name"]} ${(buzz["guess"] != "")? " - " + buzz["guess"]: ""}`
              div.column
                button(class="wrong button-" + id + "-wrong")=`${buzz["name"]} ${(buzz["guess"] != "")? " - " + buzz["guess"]: ""}`
              script.
                document.querySelector('.button-#{id}-right').addEventListener('click', () => {socket.emit('right', [#{id}, document.querySelector('[name=points_right]').value]    )})
                document.querySelector('.button-#{id}-wrong').addEventListener('click', () => {socket.emit('wrong', [#{id}, document.querySelector('[name=points_wrong]').value]    )})
        button.js-clear='Buzzes löschen'
      div.column
        h2=`Administration`
        div.row
          div.column
            h3=`Punkte für richtige Antwort`
            input(type='text' name='points_right' value="5" required='required')
          div.column
            h3=`Punkte für falsche Antwort`
            input(type='text' name='points_wrong' value="1" required='required')
        div.row
          div.column(style="margin:auto;")
            label.switch
              input(type='checkbox', id="buzz_sound", checked="true")
              span.slider.round
          div.column
              h3=`Buzz Sound`
        h2=`Schätzfrage`
          input(type='text' name='guess_time' placeholder="Antwortzeit (Sekunden)" value="30" required='required')
          button.js-push-guess
            p(id="guess_text" style="margin:0;")="Schätzfrage starten"
            i(class="icofont-spinner-alt-4", id="guess_spinner" style="display:none;")
        h2=`Multiple Choice (4 Antworten)`
          input(type='text' name='mc_time' placeholder="Antwortzeit (Sekunden)" value="30" required='required')
          button.js-push-mc
            p(id="mc_text" style="margin:0;")="Multiple Choice starten"
            i(class="icofont-spinner-alt-4", id="mc_spinner" style="display:none;")
        h2=`Blank Streamview`
          div.column
            input(type='checkbox', name='blank1_1')
            input(type='checkbox', name='blank1_2')
            input(type='checkbox', name='blank1_3', disabled="true")
            input(type='checkbox', name='blank1_4', disabled="true")
            input(type='checkbox', name='blank1_5')
            input(type='checkbox', name='blank1_6')
          div.column
            input(type='checkbox', name='blank2_1')
            input(type='checkbox', name='blank2_2')
            input(type='checkbox', name='blank2_3', disabled="true")
            input(type='checkbox', name='blank2_4', disabled="true")
            input(type='checkbox', name='blank2_5')
            input(type='checkbox', name='blank2_6')
          div.column
            input(type='checkbox', name='blank3_1')
            input(type='checkbox', name='blank3_2')
            input(type='checkbox', name='blank3_3')
            input(type='checkbox', name='blank3_4')
            input(type='checkbox', name='blank3_5')
            input(type='checkbox', name='blank3_6')


    script(src='/socket.io/socket.io.js')
    script(src='/host.js')
